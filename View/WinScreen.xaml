<UserControl x:Class="MVP_labs2.View.WinScreen"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVP_labs2.View"
             xmlns:viewmodel="clr-namespace:MVP_labs2.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#333343">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="{Binding Winner}" Foreground="White" FontSize="80" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </StackPanel>
        <Button Command ="{Binding PlayCommand}" Width="70" Height="30" Content="Play Again" Margin="10,10,-100,20" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
        <Button Command ="{Binding MenuCommand}" Width="70" Height="30" Content="Menu" Margin="10,10,100,20" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
